{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "types": ["src/types"],
      "entities": ["src/entities"],
      "components": ["src/components"],
      "const": ["src/const"],
      "nav": ["src/nav"],
      "skills": ["src/entities/character/skills"]
    }
  }
}